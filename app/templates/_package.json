    "ng2-alfresco-core": "^0.1.0",
    "ng2-alfresco-datatable": "^0.1.0",
    "ng2-alfresco-documentlist": "^0.1.0",
    "ng2-alfresco-login": "^0.1.0",
    "ng2-alfresco-search": "^0.1.9",
    "ng2-alfresco-upload": "^0.1.0",
    "ng2-alfresco-viewer": "^0.1.13",
    "ng2-charts": "1.1.0",
    "chart.js": "^2.1.4",
    "rimraf": "^2.5.2"
  },
  "devDependencies": {
    "browser-sync": "^2.10.0",
    "concurrently": "^2.0.0",
    "connect-history-api-fallback": "^1.2.0",
    "flag-icon-css": "^2.3.0",
    "license-check": "^1.0.4",
    "tslint": "^3.8.1",
    "typescript": "^1.8.10",
    "typings": "^1.0.4"
  },
  "license-check-config": {
    "src": [
      "**/*.js",
      "**/*.ts",
      "!/**/coverage/**/*",
      "!/**/demo/**/*",
      "!/**/node_modules/**/*",
      "!/**/typings/**/*",
      "!*.js",
      "!app/js/xml2json.js"
    ],
    "path": "assets/license_header.txt",
    "blocking": false,
    "logInfo": false,
    "logError": true
  },
  "publishConfig": {
    "registry": "http://devproducts.alfresco.me:4873/"
  }
